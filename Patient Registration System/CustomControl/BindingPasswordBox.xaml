<UserControl x:Class="Patient_Registration_System.CustomControl.BindingPasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Patient_Registration_System.CustomControl"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <PasswordBox x:Name="txtpassword" FontSize="13" FontWeight="Medium" FontFamily="Montserrat" Foreground="White"
                             CaretBrush="LightGray" BorderBrush="DarkGray" BorderThickness="0 0 0 2.5"  VerticalContentAlignment="Center"
                              Padding="30 0 0 0 ">
        <PasswordBox.Background>
            <ImageBrush ImageSource="/Patient Registration System;component/Images/image11.jpeg" Stretch="Uniform" AlignmentX="Left"/>
        </PasswordBox.Background>
    </PasswordBox>
</UserControl>
